html(lang='en')
 head
   title Register
   style
      include styles.css
 body
   div#links 
    a(href="/") Home 
    a(href="/loginScreen") Already have an account? Log In Here
    form(action="/register" method="POST") Register Here 
      br
      label(for="username") Username: 
      input(type="text" name="username" required)
      br
      label(for="password") Password: 
      input(type="password" name="password" required)
      br
      button(type="submit") Register


        
